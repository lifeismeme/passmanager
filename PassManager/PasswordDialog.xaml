<Window x:Class="PassManager.PasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PassManager"
        mc:Ignorable="d"
        Title="PasswordDialog" Height="150" Width="300" KeyDown="Window_KeyDown">
    <Grid>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="50,45,0,0" VerticalAlignment="Top" Width="201"/>
        <Button x:Name="btnOk" Content="_Ok" HorizontalAlignment="Left" Margin="60,77,0,0" VerticalAlignment="Top" Width="75" Click="BtnOk_Click"/>
        <Button x:Name="btnCancel" Content="_Cancel" HorizontalAlignment="Left" Margin="164,77,0,0" VerticalAlignment="Top" Width="75" Click="BtnCancel_Click"/>
        <TextBlock x:Name="txtMessage" HorizontalAlignment="Left" Margin="50,21,0,0" TextWrapping="Wrap" Text="Password:" VerticalAlignment="Top" Width="201"/>

    </Grid>
</Window>
