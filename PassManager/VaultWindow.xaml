<Window x:Class="PassManager.VaultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PassManager"
        mc:Ignorable="d"
        Title="VaultWindow" Height="509" Width="620.234" Closing="Window_Closing">
    <Window.Resources>
        <local:CredentialToTitle x:Key="CredentialToTitle"/>
    </Window.Resources>
    <Grid>
        <ListBox x:Name="lstTitle" HorizontalAlignment="Left" Height="366" Margin="10,69,0,0" VerticalAlignment="Top" Width="200" SelectionChanged="LstTitle_SelectionChanged"  />
        <TextBox x:Name="txtSearchTitle" HorizontalAlignment="Left" Height="23" Margin="10,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" GotFocus="TxtSearchTitle_GotFocus" TextChanged="TxtSearchTitle_TextChanged" UndoLimit="20" Text="Search Title" AutomationProperties.HelpText="Search Title" KeyUp="TxtSearchTitle_KeyUp" MaxLength="128"/>
        <DockPanel HorizontalAlignment="Left" Height="21" LastChildFill="False" Margin="10,3,0,0" VerticalAlignment="Top" Width="602">
            <Menu DockPanel.Dock="Top" HorizontalAlignment="Right" Width="602">
                <MenuItem Header="_File">
                    <MenuItem x:Name="menuNew" Header="_New" Click="MenuNew_Click" />
                    <MenuItem x:Name="menuOpen" Header="_Open" Click="menuOpen_Click" />
                    <MenuItem x:Name="menuSave" Header="_Save" Click="MenuSave_Click" />
                    <Separator />
                    <MenuItem x:Name="menuExit" Header="_Exit" Click="MenuExit_Click" />
                </MenuItem>
                <MenuItem Header="_Action">
                    <MenuItem x:Name="menuChangePassword" Header="_Change Password" Click="MenuChangePassword_Click" />
                </MenuItem>
            </Menu>
        </DockPanel>
        <Grid x:Name="gridCredential" Margin="215,69,73,0" Height="390" VerticalAlignment="Top" DataContext="{Binding Mode=OneWay}" LostFocus="GridCredential_LostFocus">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="274*"/>
                <ColumnDefinition Width="113*"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="txtTitle" HorizontalAlignment="Left" Height="23" Margin="25,33,0,0" TextWrapping="Wrap" Text="title" VerticalAlignment="Top" Width="279" Grid.ColumnSpan="2" TextChanged="TxtTitle_TextChanged" MaxLength="128"/>
            <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Height="23" Margin="25,98,0,0" TextWrapping="Wrap" Text="uname" VerticalAlignment="Top" Width="213" TextChanged="TxtUsername_TextChanged" Grid.ColumnSpan="2" MaxLength="128"/>
            <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Height="23" Margin="25,129,0,0" TextWrapping="Wrap" Text="pass" VerticalAlignment="Top" Width="213" MaxLength="39" TextChanged="TxtPassword_TextChanged" Grid.ColumnSpan="2"/>
            <TextBox x:Name="txtDescription" HorizontalAlignment="Left" Height="189" Margin="25,173,0,0" TextWrapping="Wrap" Text="description" VerticalAlignment="Top" Width="279" AcceptsReturn="True" AcceptsTab="True" Grid.ColumnSpan="2" TextChanged="TxtDescription_TextChanged" MaxLength="1024"/>
            <Label x:Name="lblPasswordStrength" Content="0.0 bits" HorizontalAlignment="Left" Margin="172,125,0,0" VerticalAlignment="Top" Background="#7FFFFFFF" Foreground="Red" Grid.ColumnSpan="2"/>
        </Grid>
        <Button x:Name="btnAddNewCredential" Content="New" HorizontalAlignment="Left" Margin="10,440,0,0" VerticalAlignment="Top" Width="98" Click="BtnAddNewCredential_Click"/>
        <CheckBox x:Name="chkEdit" Content="Edit" HorizontalAlignment="Left" Margin="464,46,0,0" VerticalAlignment="Top" Click="ChkEdit_Click"/>
        <Button x:Name="btnDelete" Content="Delete" HorizontalAlignment="Left" VerticalAlignment="Top" Width="85" Margin="125,440,0,0" Click="BtnDelete_Click"/>
        <Button x:Name="btnCopyUsername" Content="Copy" HorizontalAlignment="Left" Margin="464,167,0,0" Width="75" Height="23" VerticalAlignment="Top" Click="BtnCopyUsername_Click"/>
        <Button x:Name="btnCopyPassword" Content="Copy" HorizontalAlignment="Left" Margin="464,198,0,0" Width="75" Height="23" VerticalAlignment="Top" Click="BtnCopyPassword_Click"/>

    </Grid>
</Window>
