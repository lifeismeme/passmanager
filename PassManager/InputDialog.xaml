<Window x:Class="PassManager.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PassManager"
        mc:Ignorable="d"
        Title="InputDialog" Height="180" Width="350" ResizeMode="NoResize" KeyDown="Window_KeyDown">
    <Grid>
        <TextBox x:Name="txtInput" Margin="40,65,0,0" TextWrapping="Wrap" UndoLimit="20" HorizontalAlignment="Left" Width="255" Height="24" VerticalAlignment="Top" TabIndex="1"/>
        <Button x:Name="btnOk" Content="_Ok" HorizontalAlignment="Left" Margin="73,104,0,0" VerticalAlignment="Top" Width="75" Click="BtnOk_Click"/>
        <Button x:Name="btnCancel" Content="_Cancel" HorizontalAlignment="Left" Margin="195,104,0,0" VerticalAlignment="Top" Width="75" Click="BtnCancel_Click"/>
        <TextBlock x:Name="txtMessage" Margin="40,19,47,91" TextWrapping="Wrap" Text="input" TextAlignment="Justify"/>

    </Grid>
</Window>
